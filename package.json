{
  "name": "pdf-scanner-extension",
  "version": "0.1.0",
  "description": "Chrome extension that scans PDF files for secrets using Prompt Security API",
  "main": "src/background.js",
  "type": "module",
  "scripts": {
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js public/**/*.{html,css}",
    "dev:backend": "node dev/mock-backend.js",
    "dev": "npm run dev:backend & web-ext run --source-dir . --target chromium",
    "build": "web-ext build --source-dir . --artifacts-dir dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "web-ext lint --source-dir .",
    "clean": "rm -rf dist/ web-ext-artifacts/"
  },
  "keywords": [
    "chrome-extension",
    "pdf",
    "security",
    "secrets-detection",
    "prompt-security"
  ],
  "author": "PDF Scanner Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^3.0.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "web-ext": "^8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-chrome"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
