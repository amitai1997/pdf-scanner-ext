{
  "name": "pdf-scanner-extension",
  "version": "0.1.0",
  "description": "Chrome extension that scans PDF files for secrets using Prompt Security API",
  "main": "src/background.js",
  "type": "module",
  "scripts": {
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js public/**/*.{html,css}",
    "dev:extension": "web-ext run --source-dir . --target chromium",
    "dev": "npm run dev:extension",
    "dev:service": "cd inspection-service && npm run dev",
    "dev:docker": "docker-compose up",
    "build": "web-ext build --source-dir . --artifacts-dir dist",
    "build:docker": "cd inspection-service && docker build -t pdf-scanner-inspection:latest --target production .",
    "test": "echo \"No tests configured\"",
    "test:service": "cd inspection-service && npm test",
    "validate": "web-ext lint --source-dir .",
    "package": "./scripts/package-release.sh",
    "clean": "rm -rf dist/ web-ext-artifacts/ release/ temp-release/",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f inspection-service"
  },
  "keywords": [
    "chrome-extension",
    "pdf",
    "security",
    "secrets-detection",
    "prompt-security"
  ],
  "author": "PDF Scanner Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^3.0.0",
    "prettier": "^3.0.0",
    "web-ext": "^8.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
